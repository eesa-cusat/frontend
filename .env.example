# EESA Frontend Environment Configuration
# Copy this file to .env.local and update the values

# Production API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com/api
NEXT_PUBLIC_BACKEND_URL=https://api.yourdomain.com
NEXT_PUBLIC_DJANGO_ADMIN_URL=https://api.yourdomain.com/eesa

# For Development (uncomment for local development)
# NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
# NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
# NEXT_PUBLIC_DJANGO_ADMIN_URL=http://localhost:8000/eesa

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# Environment
NODE_ENV=production

# App Configuration
NEXT_PUBLIC_APP_NAME=EESA Portal
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# File upload configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.ppt,.pptx,.txt,.md

# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
